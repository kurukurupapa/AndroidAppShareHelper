<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="notification_flag"
        android:title="@string/pref_title_notification"
        android:summary="@string/pref_description_notification"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="clipboard_flag"
        android:title="@string/pref_title_clipboard"
        android:summary="@string/pref_description_clipboard"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="developer_flag"
        android:title="@string/pref_title_developer"
        android:summary="@string/pref_description_developer"
        android:defaultValue="false" />

    <Preference
        android:key="version"
        android:title="@string/pref_title_version"
        android:summary="@string/pref_description_version" />

</PreferenceScreen>
