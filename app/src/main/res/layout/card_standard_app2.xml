<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/view_big_margin"
    android:background="@drawable/part_card">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="android.intent.action.SEND\ntext/plain"
        android:id="@+id/action_type_text_view"
        android:layout_marginTop="@dimen/view_small_margin" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="7dp"
            android:layout_height="16dp"
            android:id="@+id/arrow_image_view"
            android:src="@drawable/part_src_dest_arrow"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="@dimen/card_icon_size"
            android:layout_height="@dimen/card_icon_size"
            android:id="@+id/dest_image_view"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_unknown"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="共有先アプリ XXXXX XXXXX XXXXX XXXXX XXXXX"
            android:id="@+id/dest_text_view"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/view_small_margin" />

    </LinearLayout>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_standard_app_switch"
        android:id="@+id/standard_switch"
        android:layout_marginTop="@dimen/view_margin" />

</LinearLayout>